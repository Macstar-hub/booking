package main

import (
	"net/http"

	"github.com/labstack/echo/v4"
	"github.com/labstack/gommon/log"
)

func main() {
	server := echo.New()
	server.Logger.SetLevel(log.DEBUG)
	server.Debug = true

	server.GET("/", func(c echo.Context) error {
		server.Logger.SetLevel(log.DEBUG)
		return c.String(http.StatusOK, "Hello world ... :)")
	})

